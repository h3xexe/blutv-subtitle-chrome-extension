{
  "manifest_version": 3,
  "name": "BluTV Altyazı",
  "version": "1.0",
  "author": "h.alibalcioglu@gmail.com",
  "description": "BluTV için Altyazı Ayarları",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "96": "images/96.png",
    "128": "images/128.png"
  },
  "host_permissions": [
    "https://www.blutv.com/*"
  ],
  "action": {
    "default_popup": "./popup.html",
    "default_icon": "images/96.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "https://www.blutv.com/*"
      ]
    }
  ]
}